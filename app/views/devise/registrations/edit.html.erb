<div class="blanco">
<h2 class= "pt-3">Edita tu perfil</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="pb-4">
    <%= f.file_field :images, multiple: true, class: 'form-control' %>
  </div>

  <div class="field pb-2">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

    <div class="field pb-2">
    <%= f.label :contraseña_actual %><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="field pb-2">
    <%= f.label :Nueva_contraseña %><br/>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em>Minimo <%= @minimum_password_length %> caracteres</em>
    <% end %>
  </div>

  <div class="field pb-2">
    <%= f.label :Confirma_tu_contraseña %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions pb-4 pt-4">
    <%= f.submit "Actualizar datos" %>
  </div>
<% end %>


<div><%= button_to "Darte de baja", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

<div class ="pt-4">
<%= link_to "Volver", :back %>
</div>
</div>